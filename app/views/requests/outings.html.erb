<% if @requests.any? %>
	<% @requests.each do |request| %>
		<div class="requests-recieved">
			<div id="request-image-container">
			  <%=image_tag(request.event.host.where_you_watch_picture.url(:square), :class => "request-image" ) %>
			  <div class = "read_more">
			  <%if request.active == 0%>
			  	<a href="/events/<%=request.event.id%>"> <img class="read-more2" src="../../imgs/read_more_button.png" /></a>
			  <%end%>
			  </div>
		  </div>
		  <div id="request_info">
		    <%if request.active == 1%>
				  <h3 class="show-name">Undecided</h3>
			  <%elsif request.active == 0%>
				  <h3 class="Happy show-name">Accepted!</h3>
			  <%else%>
				  <h3 class="Sad show-name">Declined</h3>
			  <%end%>
			  <h3 class="show-name"><%= request.event.show %></h3>
			  <div class="text">
				  <p>Request</p>
				  <p>Date: <%= request.event.date %></p>
				  <p>Time: <%= request.event.time.strftime("%I:%M %p") %></p>
				  <p>Name of Host: <%= request.host.first_name%> <%= request.host.last_name %></p>
				  <p>About your Host: <%= request.host.about_me %></p>
			  </div>
			 </div>
		</div>
	<%end%>
<%else%>
	<h1 class="h1-title">You have no sent requests</h1>
<%end%>
