<% if @requests.any? %>
	<% @requests.each do |request| %>
		<div class="requests-recieved">
			<div class="request-form">
				<%= render partial: "request_form" , locals: {request: request}%>
			</div>
			<div class="text">
				<p>Request</p>
				<p>Date: <%= request.event.date %></p>
				<p>Time: <%= request.event.time.hour %>:00</p>
				<p>Shows: <%= request.event.shows %></p>
				<p>Name: <%= request.guest.first_name%> <%= request.guest.last_name %></p>
				<p>About your Guest: <%= request.guest.about_me %></p>
			</div>
			<img class="request-image" src="http://placehold.it/350x350"/>
		</div>
	<%end%>
<%end%>